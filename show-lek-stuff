chap5stuff="Chap05-*/L01?-*.pdf"
chap6stuff="Chap06-*/L01-*.pdf"
chap7stuff1="Chap07-*/L01-*.pdf"
chap7stuff2="Chap07-*/L02[ab]-*.pdf"

echo "Lektionen f端r die LEK-Pr端fung"
echo "=============================="
echo "---- Kapitel 2 ----------------"
ls -1 $chap2stuff
echo "---- Kapitel 4 ----------------"
ls -1 $chap4stuff1
ls -1 $chap4stuff2
echo "---- Kapitel 5 ----------------"
ls -1 $chap5stuff
echo "---- Kapitel 6 ----------------"
ls -1 $chap6stuff
echo "---- Kapitel 7 ----------------"
ls -1 $chap7stuff1
ls -1 $chap7stuff2
